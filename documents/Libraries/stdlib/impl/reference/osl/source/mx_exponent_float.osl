#include "mx_funcs.h"

shader mx_exponent_float
    [[ string help = "Float"" Raise incoming float/color/vector values to the in2 exponent value/stream" ]]
  (
    float in1 = 0,
    float in2 = 1,
    output float out = 0
  )
{
    out = pow(in1, in2);
}
