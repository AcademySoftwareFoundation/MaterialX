#include "mx_funcs.h"

shader mx_mix_vector
    [[ string help = "Vector"" Mix two inputs according to an input mask or a constant amount." ]]
  (
    vector fg = 0,
    vector bg = 0,
    float mask = 0.0,
    output vector out = 0
  )
{
    out = mix(bg, fg, mask); 
}
