#include "mx_funcs.h"

shader mx_outside_color
    [[ string help = "Color"" Take one 1-4 channel input in plus a separate float mask input and apply the same \
                     operator to all channels: in * (1-mask) " ]]
  (
    color in = 0,
    float mask = 1,
    output color out = 0
  )
{
    out =  in * (1.0 - mask); 
}
