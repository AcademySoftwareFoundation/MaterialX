#include "mx_funcs.h"


shader mx_add_surfaceshader
    [[ string help = "surfaceshader"" add in2 to the incoming data" ]]
  (
    closure color in1 = 0,
    closure color in2 = 0,
    output closure color out = 0
  )
{
    out = mx_add (in1, in2);
}
