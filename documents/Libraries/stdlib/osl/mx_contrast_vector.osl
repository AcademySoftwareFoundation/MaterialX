#include "mx_funcs.h"

shader mx_contrast_vector
    [[ string help = "Vector"" Increase or decrease contrast of a float/color value using a linear slope multiplier." ]]
  (
    vector in = 0,
    vector amount = 1,
    vector pivot = 0.5,
    output vector out = 0
  )
{
    out = contrast(in, amount, pivot); 
}
