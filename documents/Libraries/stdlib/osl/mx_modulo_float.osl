#include "mx_funcs.h"

shader mx_modulo_float
    [[ string help = "Float"" The remaining fraction after dividing the incoming \
                     float/color/vector by the constant amount and subtracting the integer portion.\
                     The modula amount cannot be 0." ]]
  (
    float in1 = 0,
    float in2 = 1,
    output float out = 0
  )
{
    out = fmod(in1, in2); 
}
