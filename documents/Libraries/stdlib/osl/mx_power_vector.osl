#include "mx_funcs.h"

shader mx_power_vector
    [[ string help = "Vector"" Raise incoming float/color/vector values to the in2 power value/stream" ]]
  (
    vector in1 = 0,
    vector in2 = 1,
    output vector out = 0
  )
{
    out = pow(in1, in2);
}
