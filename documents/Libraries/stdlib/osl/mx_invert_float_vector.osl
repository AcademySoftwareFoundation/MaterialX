#include "mx_funcs.h"

shader mx_invert_float_vector
    [[ string help = "Vector"" Subtract the incoming float/color/vector from amount in all channels," ]]
  (
    vector in = 0,
    float amount = 1.0,
    output vector out = 0
  )
{
    out = amount - in;
}
