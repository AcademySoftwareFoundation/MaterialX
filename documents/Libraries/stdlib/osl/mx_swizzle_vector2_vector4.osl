#include "mx_funcs.h"


shader mx_swizzle_vector2_vector4
    [[ string help = "Perform an arbitrary permutation of the channels of the input stream" ]]
  (
    vector2 in = {0, 0},
    string channels = "xy",
    output vector4 out = {0,0,0,0}
  )
{
    float inF[4];

    inF[0] = in.x;
    inF[1] = in.y;
    
    out = swizzle_vector4(inF, channels);
}

