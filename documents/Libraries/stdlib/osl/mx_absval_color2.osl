#include "mx_funcs.h"

shader mx_absval_color2
    [[ string help = "The per-channel absolute value of the incoming float/color/vector." ]]
  (
    color2 in = {0,0},
    output color2 out = {0,0}
  )
{
    out = abs(in);
}
