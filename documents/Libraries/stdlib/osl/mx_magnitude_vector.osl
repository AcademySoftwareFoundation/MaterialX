#include "mx_funcs.h"

shader mx_magnitude_vector
    [[ string help = "Vector"" Outputs the float magnitude (vector length) of the incoming vector stream." ]]
  (
    vector in = 0,
    output float out = 0
  )
{
    out = length(in);
}
