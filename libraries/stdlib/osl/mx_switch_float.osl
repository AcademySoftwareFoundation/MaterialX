#include "mx_funcs.h"

shader mx_switch_float
    [[ string help = "Pass on the value of one of five input streams, according to the value of a selector parameter." ]]
  (
    float in1 = 0,
    float in2 = 0,
    float in3 = 0,
    float in4 = 0,
    float in5 = 0,
    float which = 1,
    output float out = 0
  )
{
    int selection = int(clamp(floor(which), 1, 5));
    
    if (selection == 1){
        out = in1;
    } else if (selection == 2){
        out = in2;
    } else if (selection == 3){
        out = in3;
    } else if (selection == 4){
        out = in4;
    } else if (selection == 5){
        out = in5;
    }
}
