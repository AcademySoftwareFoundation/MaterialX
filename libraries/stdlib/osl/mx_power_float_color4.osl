#include "mx_funcs.h"

shader mx_power_float_color4
    [[ string help = "Color4"" Raise incoming float/color/vector values to the in2 power value/stream" ]]
  (
    color4 in1 = {color(0,0,0), 0},
    float in2 = 1.0,
    output color4 out = {color(0,0,0), 0}
  )
{
    out = pow(in1, in2);
}
