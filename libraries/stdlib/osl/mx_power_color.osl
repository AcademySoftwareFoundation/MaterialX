#include "mx_funcs.h"

shader mx_power_color
    [[ string help = "Color"" Raise incoming float/color/vector values to the in2 power value/stream" ]]
  (
    color in1 = 0,
    color in2 = 1,
    output color out = 0
  )
{
    out = pow(in1, in2);
}
