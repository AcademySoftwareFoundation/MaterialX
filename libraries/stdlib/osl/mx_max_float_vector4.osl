#include "mx_funcs.h"

shader mx_max_float_vector4
    [[ string help = "Vector4"" Select the maximum among incoming values." ]]
  (
    vector4 in1 = {0,0,0,0},
    float in2 = 0.0,
    output vector4 out = {0,0,0,0}
  )
{
    out = max(in1, in2); 
}
